<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="#ABABAB" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="Title"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_assignee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_title"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="assignee"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_assignee_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/tv_assignee"
        android:layout_below="@id/tv_title"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="Cameron"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_assignee"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="Designation"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_designation_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_assignee_value"
        android:layout_toEndOf="@id/tv_designation"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="Manager"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_designation"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="Date Assigned"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_designation_value"
        android:layout_toEndOf="@id/tv_date"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="2015-06-28 21:37:53"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_date"
        android:gravity="center"
        android:padding="5sp"
        android:singleLine="true"
        android:text="Description"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_description_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_value"
        android:layout_toEndOf="@id/tv_description"
        android:gravity="center"
        android:padding="5sp"
        android:text="This issue has been escalated to you because france (39) has not completed the task on time. [Incident Ref: 1506280002]"
        android:textColor="#000000" />

</RelativeLayout>